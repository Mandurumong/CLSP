<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="member">

<!-- 아이디 찾기 -->
<select id="findId" parameterType="member" resultType="string">
	SELECT 
	user_id 
	FROM Member 
	WHERE user_email= #{user_email} AND user_pw= #{user_pw}
</select>

<!-- 비밀번호 찾기 -->
<select id="findPw" parameterType="member" resultType="string">
	SELECT user_pw FROM Member WHERE user_email= #{user_email} AND user_id= #{user_id}
</select>

<!-- 회원 삭제 -->
<delete id="deleteMember" parameterType="string">
	DELETE FROM member WHERE user_id= #{user_id} 
</delete>

<!-- 아이디 중복 체크 -->
<select id="idCheck" parameterType="String" resultType="int">
	SELECT COUNT(user_id) FROM Member WHERE user_id = #{user_id}
</select>

</mapper>